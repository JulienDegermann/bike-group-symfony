{% extends 'base.html.twig' %}

{% block title %}Hello BrandController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Marques</h1>

    <table class="table">
        <thead>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col"></th>
        </thead>
        <tbody>
            {% for brand in brands %}
            <tr>
                <td scope="row"> {{ brand.id }}</td>
                <td scope="row"> {{ brand.name }}</td>
                <td scope="row">
                    <a class="btn btn-primary" href="{{ path('show_brand', {'id': brand.id} ) }}">DÃ©tails</a>
                    <a class="btn btn-secondary" href="{{ path('edit_brand', {'id': brand.id} ) }}">Modifier</a>
                    <a class="btn btn-secondary" href="{{ path('delete_brand', {'id': brand.id}) }}">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('create_brand') }}" class="btn btn-primary">Ajouter une marque</a>
</div>
{% endblock %}
